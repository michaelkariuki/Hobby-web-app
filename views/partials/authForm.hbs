<div class="row m-3 col-md-6  mx-auto align-items-center">
    <p id="login-header" class="lead display-4"  data-error="{{data.error}}">{{data.name}} here</p>
    <form class=" input-form w-100 p-2" action="" method="post">
        {{#each data.list}}
        {{#if (isDescription this)}}
        <div class="form-group row col mx-auto ">
            <label for="inputEmail3" class="col-sm-2 col-form-label">{{this}}</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
        </div> 
        {{else}}
        {{#if (isNames this)}}
            <div class="form-group row col mx-auto ">
                <label  class="col-sm-2 col-form-label">{{this}}</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" id="fName" placeholder="First name" name="fName" >
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="lName" placeholder="Last name" name="lName" >
                        </div>
                    </div>
                    <small id="passwordHelpInline" class="text-muted " style="display: none;">
                        Must be 8-20 characters long.
                    </small>
                </div>
            </div>
        {{else}}
        {{#if (isPass this)}}
                <div class="form-group row col mx-auto ">
                    <label for="{{this}}" class="col-sm-2 col-form-label text-light">{{this}}</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="{{this}}" placeholder="{{this}}" name="{{this}}" >
                        <small id="passwordHelpInline" class="text-muted" style="display: none;">
                            Must be 8-20 characters long.
                        </small>

                    </div>
                </div>
        {{else}}
                <div class="form-group row col mx-auto text-light">
                    <label for="{{this}}" class="col-sm-2 col-form-label">{{this}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="{{this}}" placeholder="{{this}}" name="{{this}}" >
                        <small id="passwordHelpInline" class="text-muted" style="display: none;">
                            Must be 8-20 characters long.
                        </small>
                    </div>
                </div>
        {{/if}}
        {{/if}}
        {{/if}}
        {{/each}}
        <button class="btn btn-sm btn-secondary float-right mx-5 mb-4 px-3" id="{{data.name}}" type="submit" >{{data.name}}</button>
    </form>
</div>